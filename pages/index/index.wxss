/**index.wxss**/

.firstSection{
  order: 1;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items:center;
  width: 100%;
  margin: 10rpx 0rpx;
}

#textInput{
  font-size: 34rpx;
  background-color:silver;
  padding: 14rpx 0rpx;
  border: 1rpx;
  border-style: solid;
  border-color: black;
  border-radius: 20rpx;
  flex-grow: 1;
  margin: 0rpx 10rpx;
}
#searchButton{
  margin: 0rpx 10rpx;
  font-size: 34rpx;
  flex-grow: 1;
  
}

.secondSection{
  order:2;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items:center;
  width: 100%;
  margin: 10rpx 0rpx;
}

#pickGender{
  flex-basis:60rpx;
  padding: 10rpx 0rpx ;
  background-color:whitesmoke;
  border-top: 2rpx;
  border-top-style: solid;
  border-top-color: black;
  border-bottom: 2rpx;
  border-bottom-style: solid;
  border-bottom-color: black;
  margin-left: 10rpx;
}

#pickYear{
  flex-basis:150rpx;
  padding: 10rpx 0rpx;
  background-color:whitesmoke;
  border-top: 2rpx;
  border-top-style: solid;
  border-top-color: black;
  border-bottom: 2rpx;
  border-bottom-style: solid;
  border-bottom-color: black;
}

#pickCollege{
  background-color:whitesmoke;
  padding: 10rpx 0rpx;
  flex-basis:525rpx;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: clip;   
  border-top: 2rpx;
  border-top-style: solid;
  border-top-color: black; 
  border-bottom: 2rpx;
  border-bottom-style: solid;
  border-bottom-color: black;                      
}
